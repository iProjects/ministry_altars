@model estate_management.dto.building_dto

@{
    ViewBag.Title = "Edit Building";
}

<h2>Edit Building</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>buildingModel</h4>
        <hr />
        @Html.ValidationSummary(true)
        
        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.building_id)
            </div>
        </div>
         
        <div class="form-group">
            @Html.LabelFor(model => model.building_name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.building_name)
                @Html.ValidationMessageFor(model => model.building_name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.building_address, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.building_address)
                @Html.ValidationMessageFor(model => model.building_address)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.building_type, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.building_type)
                @Html.ValidationMessageFor(model => model.building_type)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "list", "building")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
